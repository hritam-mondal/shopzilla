@rendermode InteractiveAuto

<header class="bg-light shadow-sm navbar-sticky">
    <div class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand d-none d-sm-block me-4 order-lg-1" href="/">Shopzilla</a><a class="navbar-brand d-sm-none me-2 order-lg-1" href="/" style="min-width: 4.625rem;">Shopzilla</a>
            <div class="navbar-toolbar d-flex align-items-center order-lg-3">
                <button class="navbar-toggler" type="button" @onclick="ToggleNavBar"><span class="navbar-toggler-icon"></span></button><div role="button" class="navbar-tool d-none d-lg-flex" aria-expanded="false" aria-controls="searchBox" @onclick="ToggleSearch">
                    <span class="navbar-tool-tooltip">Search</span>
                    <div class="navbar-tool-icon-box">
                        <svg width="22px" class="text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                        </svg>
                    </div>
                </div><a class="navbar-tool d-none d-lg-flex" href="account-wishlist.html">
                    <span class="navbar-tool-tooltip">Wishlist</span>
                    <div class="navbar-tool-icon-box">
                        <svg width="22px" class="text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 21 19">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M11 4C5.5-1.5-1.5 5.5 4 11l7 7 7-7c5.458-5.458-1.542-12.458-7-7Z" />
                        </svg>
                    </div>
                </a>
                <div class="navbar-tool ms-1 me-n1" role="button" @onclick="ShowModal">
                    <span class="navbar-tool-tooltip">Account</span>
                    <div class="navbar-tool-icon-box">
                        <svg width="22px" class="text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M10 19a9 9 0 1 0 0-18 9 9 0 0 0 0 18Zm0 0a8.949 8.949 0 0 0 4.951-1.488A3.987 3.987 0 0 0 11 14H9a3.987 3.987 0 0 0-3.951 3.512A8.948 8.948 0 0 0 10 19Zm3-11a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                    </div>
                </div>
                <div class="navbar-tool dropdown ms-3">
                    <a class="navbar-tool-icon-box bg-secondary" href="#">
                        <span class="navbar-tool-label">4</span>
                        <svg width="22px" class="text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 20">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M6 15a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm0 0h8m-8 0-1-4m9 4a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm-9-4h10l2-7H3m2 7L3 4m0 0-.792-3H1" />
                        </svg>
                    </a>
                </div>
            </div>
            <div class="collapse navbar-collapse me-auto order-lg-2 @navBarClass" id="navbarCollapse">
                <!-- Search-->
                <div class="input-group d-lg-none my-3">
                    <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y text-muted fs-base ms-3"></i>
                    <input class="form-control rounded-start" type="text" placeholder="Search for products">
                </div>
                <!-- Primary menu-->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/products">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contacts">Contacts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Search collapse-->
    <div class="search-box @searchBarClass" id="searchBox">
        <div class="card pt-2 pb-4 border-0 rounded-0">
            <div class="container">
                <div class="input-group">
                    <svg width="18px" class="position-absolute top-50 start-0 translate-middle-y text-muted fs-base ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="0.8" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                    </svg>
                    <input class="form-control rounded-start" type="text" placeholder="Search marketplace">
                </div>
            </div>
        </div>
    </div>
</header>

<Modal IsVisible="@IsModalVisible">
    <div class="modal-content">
        <div class="modal-header bg-secondary">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item" role="button">
                    <a class="nav-link fw-medium @(Tab == "signin" ? "active" : "")" @onclick='() => ChangeTab("signin")' role="tab" aria-selected="true">
                        <i class="bi bi-key me-2 mt-n1"></i>Sign in
                    </a>
                </li>
                <li class="nav-item" role="button">
                    <a class="nav-link fw-medium @(Tab == "signup" ? "active" : "")" @onclick='() => ChangeTab("signup")' role="tab" aria-selected="false" tabindex="-1">
                        <i class="bi bi-person me-2 mt-n1"></i>Sign up
                    </a>
                </li>
            </ul>
            <button class="btn-close" type="button" @onclick="HideModal"></button>
        </div>
        <div class="modal-body tab-content py-4">
            @if (Tab == "signin")
            {
                <form class="needs-validation tab-pane fade @(Tab == "signin" ? "show active" : "")" autocomplete="off" novalidate="" id="signin-tab" role="tabpanel">
                    <Signin />
                </form>
            }
            else
            {
                <form class="needs-validation tab-pane fade @(Tab == "signup" ? "show active" : "")" autocomplete="off" novalidate="" id="signup-tab" role="tabpanel">
                    <Signup />
                </form>
            }
        </div>
    </div>
</Modal>

@code {
    private bool collapseSearch = false;
    private bool collapseNavbar = true;
    public bool IsModalVisible { get; set; }
    public string Tab { get; set; } = "signin";

    private string? searchBarClass => collapseSearch ? null : "collapse";
    private string? navBarClass => collapseNavbar ? null : "show";

    private void ToggleSearch()
    {
        collapseSearch = !collapseSearch;
    }

    private void ToggleNavBar()
    {
        collapseNavbar = !collapseNavbar;
    }


    void ShowModal()
    {
        IsModalVisible = true;
    }

    void HideModal()
    {
        IsModalVisible = false;
    }

    void ChangeTab(string tab)
    {
        Tab = tab;
    }
}